function primaryLoginType(){
try{
var type = localStorage.getItem('__loginType')
if(type==='form'){
window.addEventListener('load',function(){
$('#form-img').click()
})
}
}catch(e){
console.log(e)
}
}
primaryLoginType();
function beforeSumit(form){
